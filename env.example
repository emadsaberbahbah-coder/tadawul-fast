# =============================================================================
# FastAPI Application Configuration
# =============================================================================

# Core Service Settings
SERVICE_NAME=Tadawul Stock Analysis API
SERVICE_VERSION=2.2.0
APP_HOST=0.0.0.0
APP_PORT=8000
ENVIRONMENT=development

# Security & Authentication
APP_TOKEN=your_secure_app_token_here
BACKUP_APP_TOKEN=your_backup_app_token_here
REQUIRE_AUTH=true
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=60

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "https://yourdomain.com"]

# Logging Configuration
LOG_ENABLE_FILE=true
LOG_LEVEL=INFO
ENABLE_SWAGGER=true
ENABLE_REDOC=true

# =============================================================================
# Google Services Configuration
# =============================================================================

# Google Sheets
SPREADSHEET_ID=your_google_sheets_id_here
GOOGLE_APPS_SCRIPT_URL=your_google_apps_script_url_here
GOOGLE_APPS_SCRIPT_BACKUP_URL=your_backup_script_url_here
GOOGLE_SHEETS_CSV_URL=your_sheets_csv_export_url_here

# Google Sheets Service Account Credentials (JSON as single line)
GOOGLE_SHEETS_CREDENTIALS={"type": "service_account","project_id": "your_project_id","private_key_id": "your_private_key_id","private_key": "-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n","client_email": "your-service-account@your-project.iam.gserviceaccount.com","client_id": "your_client_id","auth_uri": "https://accounts.google.com/o/oauth2/auth","token_uri": "https://oauth2.googleapis.com/token","auth_provider_x509_cert_url": "https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url": "https://www.googleapis.com/robot/v1/metadata/x509/your-service-account%40your-project.iam.gserviceaccount.com","universe_domain": "googleapis.com"}

# =============================================================================
# Financial API Configuration
# =============================================================================

# Alpha Vantage
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
ALPHA_VANTAGE_BASE_URL=https://www.alphavantage.co/query
ALPHA_VANTAGE_TIMEOUT=15

# Finnhub
FINNHUB_API_KEY=your_finnhub_api_key_here
FINNHUB_BASE_URL=https://finnhub.io/api/v1
FINNHUB_TIMEOUT=15

# EOD Historical Data
EODHD_API_KEY=your_eodhd_api_key_here
EODHD_BASE_URL=https://eodhistoricaldata.com/api
EODHD_TIMEOUT=15

# Twelve Data
TWELVEDATA_API_KEY=your_twelvedata_api_key_here
TWELVEDATA_BASE_URL=https://api.twelvedata.com
TWELVEDATA_TIMEOUT=15

# MarketStack
MARKETSTACK_API_KEY=your_marketstack_api_key_here
MARKETSTACK_BASE_URL=http://api.marketstack.com/v1
MARKETSTACK_TIMEOUT=15

# Financial Modeling Prep
FMP_API_KEY=your_fmp_api_key_here
FMP_BASE_URL=https://financialmodelingprep.com/api/v3
FMP_TIMEOUT=15

# =============================================================================
# HTTP Client Configuration
# =============================================================================

USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RETRY_BACKOFF=2

# =============================================================================
# Cache Configuration
# =============================================================================

CACHE_TTL_MINUTES=30
CACHE_BACKUP_ENABLED=true
CACHE_CLEANUP_INTERVAL=3600

# =============================================================================
# Performance & Rate Limiting
# =============================================================================

HTTP_CLIENT_MAX_CONNECTIONS=100
HTTP_CLIENT_MAX_KEEPALIVE=20
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# =============================================================================
# External Service URLs
# =============================================================================

FASTAPI_BASE_URL=https://your-app.onrender.com
ARGAAM_BASE_URL=https://www.argaam.com
TADAWUL_BASE_URL=https://www.saudiexchange.sa
